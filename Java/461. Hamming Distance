class Solution {
	public int hammingDistance(int x, int y) {
	    char[] a = String.format("%32s", Integer.toString(x, 2)).replace(" ", "0").toCharArray();
	    char[] b = String.format("%32s", Integer.toString(y, 2)).replace(" ", "0").toCharArray();
	    
	    int result = 0;
	    for( int i=0; i<a.length; i++ )
	    {
	    	if( a[i] != b[i] )
	    	{
	    		result++;
	    	}
	    }
		
		return result;
	}
}
